    <script>
        // Filter functionality
        document.addEventListener('DOMContentLoaded', function() {
            const filterOptions = document.querySelectorAll('.filter-option');
            const flightCards = document.querySelectorAll('.flight-card');
            
            filterOptions.forEach(option => {
                option.addEventListener('click', function() {
                    // Remove active class from all options
                    filterOptions.forEach(opt => opt.classList.remove('active'));
                    
                    // Add active class to clicked option
                    this.classList.add('active');
                    
                    const filterValue = this.getAttribute('data-filter');
                    
                    // Show/hide flight cards based on filter
                    flightCards.forEach(card => {
                        if (filterValue === 'all') {
                            card.style.display = 'block';
                        } else if (card.getAttribute('data-category').includes(filterValue)) {
                            card.style.display = 'block';
                        } else {
                            card.style.display = 'none';
                        }
                    });
                });
            });
            
            // Form submission
            document.getElementById('flightSearch').addEventListener('submit', function(e) {
                e.preventDefault();
                alert('Searching for flights... This would connect to a backend in a real application.');
            });
            
            // Book button functionality
            document.querySelectorAll('.book-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const flightCard = this.closest('.flight-card');
                    const airline = flightCard.querySelector('.airline').textContent;
                    const price = flightCard.querySelector('.price').textContent;
                    alert(`Booking flight with ${airline} for ${price}. This would redirect to booking page in a real application.`);
                });
            });
        });
    </script>
